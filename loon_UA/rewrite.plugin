#!name=Facebook User-Agent Spoof Only
#!desc=Spoof iPhone User-Agent for Facebook/fbcdn requests without rejecting
#!author=Measmony
#!version=1.0.1

[Rewrite]
# Spoof iPhone User-Agent on all Facebook and fbcdn.net domains
^https?:\/\/(?:[a-zA-Z0-9_-]+\.)*(facebook\.com|fbcdn\.net) header-replace User-Agent Mozilla/5.0 (iPhone; CPU iPhone OS 17_4 like Mac OS X) AppleWebKit/605.1.15 (KHTML, like Gecko) Version/17.0 Mobile/15E148 Safari/604.1

[MITM]
hostname = *.facebook.com,*.fbcdn.net